.weui-uploader {
    padding: 10rpx;
}

.pic {
    float: left;
    position: relative;
    margin-right: 9px;
    margin-bottom: 9px;
}

.weui-uploader__img {
    display: block;
    width: 192rpx;
    height: 192rpx;
}

.delete-btn {
    position: absolute;
    top: 0;
    right: 0;
}

.weui-uploader__input-box {
    width: 190rpx;
    height: 180rpx;
    box-sizing: border-box;
    background-color: #ededed;
}

.weui-uploader__input {
    font-size: 80rpx;
    text-align: center;
    line-height: 165rpx;
    width: 100%;
    height: 100%;
    color: gray;
}
