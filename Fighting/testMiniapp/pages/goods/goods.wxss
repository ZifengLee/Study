/* pages/Luckydraw/Luckydraw.wxss */
page {
  box-sizing: border-box;
  padding-top: 25rpx;
  background-color: #FF6600;
}

.box {
  width: 700rpx;
  height: 700rpx;
  margin: 0 auto;
  box-sizing: border-box;
  position: relative;
  -webkit-box-shadow: 8px 8px 0 rgba(0, 0, 0, .2);
  box-shadow: 8px 8px 0 rgba(0, 0, 0, .2);
}

.list {
  width: 220rpx;
  height: 220rpx;
  position: absolute;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-content: center;
  align-items: center;
}

/* 店铺卡片区域 */
.card {
	width: 90%;
	margin: auto;
	margin-bottom: 20rpx;
	display: flex;
	justify-content: center;
	align-items: flex-start;
}
.card-content {
	margin-top: 5rpx;
	width: 100%;
	height: 80%;
	background-color: #fff;
	display: flex;
	flex-direction: column;
	align-items: center;
	box-shadow: 0 0 5rpx 5rpx rgb(233, 233, 233);
	border-radius: 10px;
}
.title {
	width: 100%;
	height: 40%;
	border-bottom: 4rpx dashed rgb(236, 236, 236);
	position: relative;
	box-sizing: border-box;
	padding: 20rpx 40rpx;
	font-size: 30rpx;
}
.jianhjie {
	width: 100%;
	height: 60%;
	display: flex;
	box-sizing: border-box;
	padding: 10rpx 40rpx;
	align-items: center;
	font-size: 28rpx;
	color: #8e8e8e;
}
.jianhjie>image {
	width: 100rpx;
	height: 100rpx;
}
.jianhjie>view {
	margin-left: 20rpx;
}

.jianhjie>view>view {
	margin-top: 15rpx;
margin-bottom: 15rpx;
}

.title::before {
	content: '';
	display: block;
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	border-right: 5rpx solid rgb(224, 224, 224);
	background-color: #fff;
	position: absolute;
	top: 89%;
	left: -22rpx;
}
.title::after {
	content: '';
	display: block;
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
	border-left: 5rpx solid rgb(224, 224, 224);
	background-color: #fff;
	position: absolute;
	top: 89%;
	right: -22rpx;
}

/* 抽奖过程中选定样式 */
.list.change_in {
  color: #fff;
  background-color: #00BFFF;
}

.list_t {
  width: 90%;
  height: 160rpx;
}

.list_t image {
  width: 100%;
  height: 100%;
}

.list_b {
  width: 90%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 根据TOP */
.list:nth-child(1) {
  left: 50%;
  top: 50%;
  color: #fff;
  background-color: #1CBBB4;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.list.grey:nth-child(1) {
  background-color: #5F9EA0;
}

.list:nth-child(2),
.list:nth-child(3),
.list:nth-child(4) {
  top: 0;
}

.list:nth-child(6),
.list:nth-child(7),
.list:nth-child(8) {
  bottom: 0;
}

.list:nth-child(5),
.list:nth-child(9) {
  top: 50%;
  -webkit-transform: translateY(-50%);
  transform: translateY(-50%);
}

/* 根据LEFT */
.list:nth-child(2),
.list:nth-child(8),
.list:nth-child(9) {
  left: 0;
}

.list:nth-child(3),
.list:nth-child(7) {
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
}

.list:nth-child(4),
.list:nth-child(5),
.list:nth-child(6) {
  right: 0;
}