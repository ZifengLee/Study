/* 活动专区 */
.coupon {
    height: 150rpx;
    margin-bottom: 20rpx;
}

.couponName {
    padding-top: 10px;
    padding-bottom: 16rpx;
}

/* 已砍价用户信息 */
.left-top {
    position: absolute;
    top: -113rpx;
    left: calc((100% - 450rpx) / 2);
    height: 60rpx;
    width: 450rpx;
    box-sizing: border-box;
    border-radius: 30rpx;
    background-color: rgba(255, 209, 179, 0.2);
    color: #FFCE72;
}

.left-person {
    display: flex;
    align-items: center;
}

/* 砍价成功用户头像*/
.left-person-header {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    margin-right: 20rpx;
    background-color: #fff;
}

.right-top {
    position: absolute;
    top: 20rpx;
    right: 0;
}

/* 抽奖 */
.lottery {
    color: white;
    height: 50%;
    font-size: 32rpx;
}

.lottery .number {
    display: flex;
    justify-content: space-between;
    padding-left: 40rpx;
    padding-right: 40rpx;
}

/* 转盘 */
.photo {
    width: 80rpx;
    height: 90rpx;
}

.index {
    width: 300px;
    margin: 50rpx auto;
    border: 1px solid #ffcccc;
    border-radius: 50%;
    height: 300px;
    position: relative;
    overflow: hidden;
    font-size: 26rpx;
}

.xian {
    width: 300px;
    height: 1px;
    background: #d6d6d6;
    position: absolute;
    top: 150px;
    left: 0;
}

.index>.xian:nth-child(2) {
    transform: rotateZ(45deg);
}

.index>.xian:nth-child(3) {
    transform: rotateZ(90deg);
}

.index>.xian:nth-child(4) {
    transform: rotateZ(135deg);
}

.detail {
    position: absolute;
}

.index>.detail:nth-child(5) {
    top: 56px;
    left: 107px;
}

.index>.detail:nth-child(6) {
    top: 62px;
    left: 157px;
}

.index>.detail:nth-child(7) {
    top: 98px;
    left: 191px;
}

.index>.detail:nth-child(8) {
    top: 149px;
    left: 190px;
}

.index>.detail:nth-child(9) {
    top: 185px;
    left: 152px;
}

.index>.detail:nth-child(10) {
    top: 183px;
    left: 99px;
}

.index>.detail:nth-child(11) {
    top: 140px;
    left: 61px;
}

.index>.detail:nth-child(12) {
    top: 86px;
    left: 65px;
}

.index>span {
    width: 30px;
    height: 30px;
    background-color: #ffcccc;
    border-radius: 50%;
    position: absolute;
    left: 135px;
    top: 135px;
}

.index>span::after {
    content: " ";
    width: 0;
    height: 0;
    border-right: 6px solid transparent;
    border-left: 6px solid transparent;
    border-bottom: 26px solid #ffcccc;
    z-index: 10;
    position: absolute;
    left: 8.5px;
    top: -24px;
}

.beijing {
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

/* 抽奖规则 */
.activity {
    padding: 12rpx 12rpx;
    width: 125rpx;
    border-radius: 0 24rpx 24rpx 0;
    background-color: rgba(255, 255, 255, 0.2);
}

.activity-rule {
    position: fixed;
    z-index: 100;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.3);
    box-sizing: border-box;
    padding: 100rpx;
    overflow: hidden;
}

.activity-content {
    background-color: #fff;
    color: #f97d1f;
    border-radius: 20rpx;
    width: 100%;
    position: relative;
    padding-top: 40rpx;
    height: 250rpx;
}

.rule {
    position: absolute;
    top: -60rpx;
    text-align: center;
    background-color: #f97d1f;
    font-size: 36rpx;
    color: #fff;
    border-radius: 40rpx;
    padding: 20rpx 40rpx;
    left: 50%;
    transform: translateX(-50%);
}

.rule-test {
    font-weight: bold;
    font-size: 30rpx;
}

.btn {
    text-align: center;
    border-radius: 50%;
    border: 2rpx solid #999;
    color: #999;
    font-size: 30rpx;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0;
    margin: 0 auto;
}