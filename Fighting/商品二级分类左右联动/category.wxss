page {
  font-family: "微软雅黑";
  background-color: #f0f0f0;
}

.search {
  width: 100%;
  height: 88rpx;
  background-color: #01ba45;
  box-sizing: border-box;
  padding-top: 18rpx;
  position: fixed;
  left: 0;
  top: 0;
}

.search-box {
  width: 690rpx;
  height: 57rpx;
  line-height: 57rpx;
  margin-left: 30rpx;
  background-color: #f2f2f2;
  color: #666;
  box-sizing: border-box;
  padding-left: 60rpx;
  border-radius: 57rpx;
  font-size: 26rpx;
}

.question-mark {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 45rpx;
  top: 30rpx;
}

.tui-fixed-x {
  /* margin-left: 130px; */
  position: fixed;
  top: 89rpx;
  left: 0;
}

.tui-fixed-left {
  width: 170rpx;
  height: 100%;
  border-right: 1px solid #dfdfdf;
  position: fixed;
  background-color: #f5f5f5;
  top: 89rpx;
  left: 0;
}

.tui-city-scroll {
  width: 100%;
}

.menu-item {
  font-size: 26rpx;
  box-sizing: border-box;
  height: 100rpx;
  line-height: 100rpx;
  width: 170rpx;
  background-color: #fff;
  display: block;
  border-bottom: 1px solid #dfdfdf;
  position: relative;
  z-index: 10;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.menu-active {
  border-left: 10rpx solid #01ba45;
  background-color: #f0f0f0;
}

.content {
  width: 580rpx;
  box-sizing: border-box;
  height: 100%;
  position: fixed;
  top: 89rpx;
  right: 0;
}

.tui-city-scroll-y {
  height: 100%;
  box-sizing: border-box;
}

.tui-list-head {
  height: 65rpx;
  line-height: 65rpx;
  font-weight: 700;
  font-size: 32rpx;
}

.tui-list-li {
  background-color: #fff;
  /* height: 400px; */
  overflow: hidden;
  color: #fff;
  font-size: 50rpx;
  box-sizing: border-box;
  padding: 20rpx 0 0 0;
}

.goods-box {
  width: 170rpx;
  /* height: 100rpx;
background: #c00; */
  overflow: hidden;
  margin-right: 10rpx;
  /* margin-bottom: 10rpx; */
  float: left;
}

.tui-list-li .goods-box:nth-child(3n) {
  margin-right: 0rpx;
}

.goodsImg {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  margin-bottom: 15rpx;
}

.goodsName {
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  height: 42rpx;
  line-height: 42rpx;
  text-align: center;
  font-size: 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  margin-bottom: 20rpx;
}

.pro-item {
  margin: 0 20rpx;
  padding-top: 20rpx;
  /* box-sizing: border-box; */
}

.allShop {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx #d5d5d5;
  overflow: hidden;
}


/* 商品详情信息 */

.pro-item .center_img image {
  width: 100%;
  /* height: 340rpx; */
}

.shop .shop_name {
  margin: 20rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #EEE;
}

.shop .shop_name .goods_name {
  font-size: 36rpx;
}

.shop .shop_name .goods_num {
  flex-basis: 120rpx;
  text-align: right;
  font-size: 26rpx;
  color: #9a9a9a;
}


