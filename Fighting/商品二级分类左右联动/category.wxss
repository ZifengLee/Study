/* 价钱与购物车按钮 */

.purchase .goods_price {
  display: flex;
  align-items: flex-end;
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}

.purchase .goods_price .dollar {
  color: #FF5533;
  font-size: 34rpx;
}

.purchase .goods_price .dollar_ori {
  text-decoration: line-through;
  color: #9c9c9c;
  margin-left: 10rpx;
}

