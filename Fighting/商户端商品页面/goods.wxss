/* 搜索区域 */
#search {
    width: 100%;
    height: 120rpx;
    background-color: #039bff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 30rpx;
    color: #fff;
    font-size: 28rpx;
    position: fixed;
    top: 0;
    left: 0;
}
#search_img {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    left: 50rpx;
}

#search_input {
    background-color: #fff;
    width: 90%;
    height: 70rpx;
    border-radius: 30rpx;
    color: #c5c5c5;
    box-sizing: border-box;
    padding-left: 80rpx;
    padding-top: 16rpx;
}

/* 商品信息 */
.goods_content {
    width: 94%;
    margin: auto;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    margin-top: 140rpx;
}

.info {
    padding-bottom: 25rpx;
    display: flex;
    border-bottom: 1rpx solid #c3c3c3;
    margin: 20rpx 20rpx;
}

.info-image {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
}

.info-guige {
    display: flex;
    flex-flow: column;
    justify-content: space-between;
    width: calc(100% - 120rpx);
}

.info-guige > view {
    display: flex;
    justify-content: space-between;
}

.time {
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #333;
}

.money {
    padding: 14rpx 0;
    color: #000;
    font-size: 26rpx;
    border-bottom: 2rpx solid #333;
}

.moneyg {
    padding: 6rpx 0;
}

.goods-all {
    padding: 20rpx 0;
    border-bottom: 2rpx solid #333;
    color: red;
}

.goods_btn {
    margin: 0;
}

/* 吸底 */
.submit {
    position: fixed;
    z-index: 100;
    bottom: 0;
    left: 0;
    width: 100%;
    align-items: center;
    height: 100rpx;
    background-color: #fff;
}

.submit button {
    background-color: #039bff;
    font-weight: 100;
    color: #fff;
    font-size: 35rpx;
    margin-top: 15rpx;
    /* margin-right: 108rpx;
margin-left: 85rpx; */
    width: 60%;
}
