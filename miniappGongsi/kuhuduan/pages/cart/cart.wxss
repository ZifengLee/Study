/*外部容器*/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  margin-bottom: 80rpx;
}

/*整体列表*/
.carts-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx 40rpx;
}

/*每行单元格*/
.carts-item {
  display: flex;
  flex-direction: row;
  height: 150rpx;
  /*width属性解决标题文字太短而缩略图偏移*/
  width: 100%;
  border-bottom: 1px solid #eee;
  padding: 30rpx 0;
  background-color:#fff;
  
}

.del {
  height: 100rpx;
  width: 100rpx;
  background-color: red;
}

/*左部图片*/
.carts-image {
  width: 150rpx;
  height: 150rpx;
}


/*右部描述*/
.carts-text {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/*右上部分标题*/
.carts-title {
  margin: 10rpx;
  font-size: 30rpx;
}

/*右下部分价格与数量*/
.carts-subtitle {
  font-size: 25rpx;
  color: darkgray;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*价格*/
.carts-price {
  color: #f60;
}

/* 加减按钮和输入框 */
.stepper {
  display: flex;
  justify-content: center;
  align-items: center;
  color: black;
}

.stepper>text {
  width: 50rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1rpx solid rgb(155, 155, 155);
}

.stepper>text:first-child {
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.stepper>text:last-child {
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}

.stepper>input {
  width: 80rpx;
  height: 60rpx;
  box-sizing: border-box;
  line-height: 60rpx;
  text-align: center;
  border-top: 1rpx solid rgb(155, 155, 155);
  border-bottom: 1rpx solid rgb(155, 155, 155);
}

/*复选框样式*/
.carts-list icon {
  margin-top: 60rpx;
  margin-right: 20rpx;
}

/*底部按钮*/
.carts-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 5;
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}
.carts-footer>view {
  padding-left: 30rpx;
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}

