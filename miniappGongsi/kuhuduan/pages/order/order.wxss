.fenlei {
    width: 90%;
    display: flex;
    flex-direction: column;
    flex: 2;
}

.fenlei_content {
    display: flex;
    justify-content: space-around;
    /* align-items: center; */
    margin-top: 30rpx;
}

.fenlei_content > view {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.fenlei_content > view > image {
    width: 70rpx;
    height: 70rpx;
}

.order_item {
    width: 90%;
    margin: 20rpx auto;
    box-shadow: 8rpx 8rpx 15rpx 1rpx #fff2f2 inset, 8rpx 8rpx 15rpx 1rpx #fff2f2;
}

