.order_title {
    position: relative;
    height: 60rpx;
}

.order_flag {
    position: absolute;
    right: 20rpx;
top: 20rpx;
color: red;
}
.order_img {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    /* color: #fcdfdf; */
    font-size: 26rpx;
}
.order_img > view {
    width: 80%;
    display: flex;
    justify-content: flex-start;
    padding-left: 30rpx;
}
.order_img .img {
    flex: 1;
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    box-shadow: 8rpx 8rpx 10rpx 3rpx #9e9e9e;
    margin: 0 30rpx;
}
.order_price {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    margin: 50rpx 0 10rpx 0;
    box-sizing: border-box;
    padding-right: 30rpx;
    color: red;
}
.btn {
    width: 100%;
    display: flex;
    justify-content: flex-end;
}
.btn > button {
    margin: 20rpx;
    border-radius: 50rpx;
}

.height100 {
    width: 100%;
    flex: 8;
    height: 0;
}

.page-section-spacing {
    margin-top: 60rpx;
}
.scroll-view_H {
    white-space: nowrap;
}
.scroll-view-item {
    height: 300rpx;
}
.scroll-view-item_H {
    display: inline-block;
    width: 100%;
    height: 300rpx;
}
