/* 搜索区域 */
#search {
	width: 100%;
	height: 120rpx;
	background-color: red;
	display: flex;
	justify-content: space-between;
	align-items: center;
	box-sizing: border-box;
	padding: 0 30rpx;
	color: #fff;
	font-size: 28rpx;
  }
  #search_img {
	position: absolute;
	width: 40rpx;
	height: 40rpx;
	left: 50rpx;
  }

  #search_input {
	background-color: #fff;
	width: 90%;
	height: 70rpx;
	border-radius: 30rpx;
	color: #c5c5c5;
	box-sizing: border-box;
	padding-left: 80rpx;
	padding-top: 16rpx;
  }

/* 商品列表*/
#scroll{
	height:calc(100% - 145rpx);
	position: absolute;
	top: 145rpx;
}

.goods_content {
	width: 94%;
	margin: auto;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}
.goods {
	width: 100%;
	margin-bottom: 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	border-radius: 20rpx;
	overflow: hidden;
	box-shadow: 0 0 5rpx 5rpx rgb(233, 233, 233);
}
.goods_img {
	width: 100%;
	height: 450rpx;
}
.goods_title {
	width: 95%;
	font-size: 30rpx;
	font-weight: 550;
	padding-top: 10rpx;
	padding-bottom: 30rpx;
	border-bottom: 1rpx solid rgb(187, 187, 187);
}
.goods_price {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx 20rpx;
	color: red;
}
.price_content {
	margin: 0 0 0 20rpx;
	display: flex;
	align-items: baseline;
}
.price_new {
	font-size: 40rpx;
	/* font-weight: bolder; */
}

.price_actually{
	font-size: 36rpx;
}

.price_old {
	font-size: 32rpx;
	color: rgb(187, 187, 187);
	text-decoration: line-through;
	margin-left: 20rpx;
}

.goods_btn {
	margin: 0 20rpx 0 0;
	width: 26%;
	font-size: 24rpx !important;
	border-radius: 30rpx;
}

.merchant{
	width: 100%;
	text-align: center;
	margin-top: 130rpx;
}