/* 搜索栏样式 */
.search {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #039BFF;
}

.searchView {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 94%;
  height: 78rpx;
  border: 1rpx solid #039BFF;
  border-radius: 45rpx;
  color: #c4c2c2;
  font-size: 30rpx;
  background-color: white;
}

.searchView>image {
  width: 50rpx;
  height: 45rpx;
  margin-left: 20rpx;
}

.user-search {
  width: 100%;
  margin-left: 32rpx;
  font-size: 30rpx;
}

.searchView>text {
  width: 120rpx;
  border-left: 4rpx solid #039BFF;
  color: #039BFF;
  padding-left: 10px;

}

#scroll {
  height: 100%;
  padding-bottom: 200rpx;
  margin-bottom: 200rpx;
  overflow: hidden;
}

.contain2 {
  padding: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 0rpx;
}

.orderList {
  box-shadow: 3rpx 3rpx 8rpx gray;
  border-radius: 30rpx;
  margin-bottom: 30rpx;
}

.title {
  display: flex;
  justify-content: space-between;
  padding: 30rpx 10rpx;

}

