page {
	background-color: #f2f2f2;
	padding: 0rpx;
	margin: 0rpx;
}


.top {
	width: 100%;
	height: 160rpx;
	display: flex;
	margin-top: 18rpx;
	border-bottom: 1rpx solid #DFDFDF;
}

.people_img {
	width: 190rpx;
	height: 150rpx;
	padding-left: 30rpx;
}

.people_img image {
	width: 100%;
	height: 100%;
	border-radius: 90rpx;
}

.top-main {
	width: 92%;
	margin-left: 30rpx;

}

.top-main image {
	width: 49rpx;
	height: 49rpx;
	margin-left: 20rpx;
}


.userInfo {
	margin: 16rpx 0rpx;
	display: flex;
	justify-content: space-between;
}

.userInfo .userName {
	font-size: 38rpx;
	font-weight: 540;
}

.userInfo .userNum {
	font-size: 30rpx;
	color: #A3A3A3;
	padding-right: 36rpx;
}


.top-main .phone {
	font-size: 32rpx;
	color: #A3A3A3;
	margin-top: 30rpx;
}