/* 设置遮罩层样式 */
.mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0, 0, 0, 0.4);
    overflow: hidden;
    display: flex;
    justify-content: center;
}

.mask .images {
    position: absolute;
    width: 90%;
    display: flex;
    justify-content: center;
    top: 0;
    height: 95%;
}

.images > image {
    height: 1060rpx;
    width: 650rpx;
    position: absolute;
    top: -50rpx;
}

