.noOrder {
    width: 100%;
    text-align: center;
    margin-top: 140rpx;
    font-size: 32rpx;
    color: #646464;
}

/* 设置遮罩层样式 */
#mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0, 0, 0, 0.4);
    overflow: hidden;
}

#bgc {
    width: 70%;
    height: 370rpx;
    background-color: white;
    margin: auto;
    margin-top: 340rpx;
    border-radius: 20rpx;
    position: relative;
}

#maskCenter {
    text-align: center;
    padding-top: 30rpx;
    font-size: 40rpx;
    padding-bottom: 30rpx;
    border-bottom: 0.5px solid black;
    font-weight: 560;
}

#center {
    text-align: center;
    line-height: 160rpx;
    font-size: 36rpx;
}

#button {
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    width: 100%;
    line-height: 110rpx;
    border-top: 1rpx solid black;
    font-size: 34rpx;
}

#button view:first-child {
    border-right: 1rpx solid black;
}

#button view {
    width: 50%;
    text-align: center;
}