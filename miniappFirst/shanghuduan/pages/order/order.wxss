.contain {
    margin-bottom: 90rpx;
}

/* 搜索栏样式 */
.search {
    width: 100%;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #039bff;
    position: fixed;
    top: 0;
}

.searchView {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 94%;
    height: 78rpx;
    border: 1rpx solid #039bff;
    border-radius: 45rpx;
    color: #c4c2c2;
    font-size: 30rpx;
    background-color: white;
}

.searchView>image {
    width: 50rpx;
    height: 45rpx;
    margin-left: 20rpx;
}

.user-search {
    width: 100%;
    margin-left: 32rpx;
    font-size: 30rpx;
    color: black;
}

.searchView>text {
    width: 120rpx;
    border-left: 4rpx solid #039bff;
    color: #039bff;
    padding-left: 10px;
}

#scroll {
    height: 100%;
    width: 100%;
    margin-top: 120rpx;
    overflow: hidden;
}

.contain2 {
    padding: 20rpx;
    padding-top: 30rpx;
    padding-bottom: 0rpx;
}

.orderList {
    box-shadow: 3rpx 3rpx 8rpx gray;
    border-radius: 30rpx;
    margin-bottom: 30rpx;
}

.title {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 10rpx 0rpx 10rpx;
}

.colorR {
    color: #ff8963;
}

.colorGray {
    color: #646464;
}

.fs32 {
    font-size: 32rpx;
}

.fs38 {
    font-size: 38rpx;
}

.pt10 {
    padding-top: 10rpx;
}

.pb10 {
    padding-bottom: 10rpx;
}

.mb10 {
    margin-bottom: 10rpx;
}

.personDetail {
    display: flex;
    border-bottom: 2rpx solid #eee;
    padding: 20rpx 16rpx;
    justify-content: space-between;
}

.personName {
    display: flex;
}

.phone {
    margin-left: 20rpx;
}

.call {
    width: 44rpx;
    height: 44rpx;
}

.orderNum {
    display: flex;
    justify-content: space-between;
}

.orderDetail {
    padding:16rpx;
}

.btn {
    background-color: #039bff;
    color: white;
    padding: 7rpx;
    border-radius: 20rpx;
}

.confirm {
    display: flex;
    justify-content: flex-end;
    padding:10rpx;
    border-top: 1rpx solid #dfdfdf;
}

.plr {
    padding-left: 24rpx;
    padding-right: 24rpx;
}

.ptb {
    padding-top: 10rpx;
