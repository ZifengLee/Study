#content {
    font-size: 34rpx;
}

#fenlei {
    width:100%;
    background-color: white;
    position: fixed;
    top: 0;
    height: 150rpx;
    display: flex;
    justify-content: center;
}

#fenlei_content {
    width: 90%;
    display: flex;
    justify-content: space-around;
    margin-top: 20rpx;
}

#fenlei_content>view {
    display: flex;
    flex-direction: column;
    align-items: center;
}

#fenlei_content .active {
    font-weight: bold;
}

#fenlei_content>view>image {
    width: 70rpx;
    height: 70rpx;
}

.order_item {
    width: 90%;
    margin: 20rpx auto;
    box-shadow: 3rpx 3rpx 15rpx 1rpx #ffeaea inset, 3rpx 3rpx 15rpx 1rpx #ffeaea;
}

.order_title {
    position: relative;
    height: 60rpx;
}

.order_flag {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    color: red;
}

.order_img {
    width: 100%;
    height: 110rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
}

#goodsImage {
    width: 58%;
    height: 100%;
    display: flex;
    justify-content: flex-start;
    padding-left: 30rpx;
    overflow: hidden;
}

.order_img .img {
    flex: 1;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    margin: 0 15rpx;
}

#goods {
    box-shadow: 4rpx 4rpx 10rpx 3rpx #9e9e9e;
}

.order_price {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    padding: 10rpx 0 35rpx 0;
    box-sizing: border-box;
    padding-right: 30rpx;
    color: red;
}

.btn {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    margin-top: -20rpx;
}

.btn>button {
    margin: 20rpx;
    border-radius: 50rpx;
}

.height100 {
    width: 100%;
    position: absolute;
    top: 150rpx;
}

.page-section-spacing {
    margin-top: 60rpx;
}

.scroll-view_H {
    white-space: nowrap;
}

.scroll-view-item {
    height: 300rpx;
}

.scroll-view-item_H {
    display: inline-block;
    width: 100%;
    height: 300rpx;
}

/* 设置遮罩层样式 */
#mask {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0, 0, 0, 0.4);
    overflow: hidden;
}

#bgc {
    width: 70%;
    height: 370rpx;
    background-color: white;
    margin: auto;
    margin-top: 400rpx;
    border-radius: 20rpx;
    position: relative;
}

#maskCenter {
    text-align: center;
    padding-top: 30rpx;
    font-size: 40rpx;
    padding-bottom: 30rpx;
    border-bottom: 0.5px solid black;
    font-weight: 560;
}

#center {
    text-align: center;
    line-height: 160rpx;
    font-size: 36rpx;
}

#button {
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 0;
    width: 100%;
    line-height: 110rpx;
    border-top: 1rpx solid black;
    font-size: 34rpx;
}

#button view:first-child {
    border-right: 1rpx solid black;
}

#button view {
    width: 50%;
    text-align: center;
}