/* 搜索区域 */
#search {
    width: 100%;
    height: 120rpx;
    background-color: red;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 0 30rpx;
    color: #fff;
    font-size: 28rpx;
    position: fixed;
    top: 0;
    left: 0;
}

#search_img {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    left: 50rpx;
}

#search_input {
    background-color: #fff;
    width: 90%;
    height: 70rpx;
    border-radius: 30rpx;
    color: #c5c5c5;
    box-sizing: border-box;
    padding-left: 80rpx;
    padding-top: 16rpx;
}

/* 返回顶部 */
.goTop {
    height: 70rpx;
    width: 70rpx;
    position: fixed;
    top: 60rpx;
    background: rgba(0, 0, 0, 0.3);
    left: 20rpx;
    border-radius: 50%;
}

/* 商品列表*/
#scroll {
    height: 1180rpx;
}

.goods_content {
    width: 100%;
    margin: auto;
    box-sizing: border-box;
    display: flex;
    margin-top: 140rpx;
    flex-wrap: wrap;
}

.goods {
    width: 48%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 8rpx 1%;
}

.goods_img {
    width: 100%;
    height: 460rpx;
}

.goods_title {
    width: 95%;
    font-size: 30rpx;
    padding: 10rpx 0;
}

.goods_price {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: red;
}

.price_content {
    margin: 0 0 0 10rpx;
    display: flex;
    align-items: baseline;
}

.price_new {
    font-size: 40rpx;
}

.price_actually {
    font-size: 30rpx;
}

.price_old {
    font-size: 24rpx;
    color: rgb(187, 187, 187);
    text-decoration: line-through;
    margin-left: 18rpx;
}

.goods_btn {
    margin: 0 4rpx 6rpx 0;
    width: 40%;
    font-size: 20rpx !important;
    border-radius: 26rpx;
}

.noting {
    width: 100%;
    margin-top: 150rpx;
}
