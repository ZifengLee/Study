.search {
  width: 100%;
  height: 120rpx;
  background-color: red;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.search_img {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 50rpx;
}
.search_input {
  background-color: #fff;
  width: 85%;
  height: 70rpx;
  border-radius: 30rpx;
  box-sizing: border-box;
  padding-left: 80rpx;
}
.hot .history {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.hot_title {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 20rpx 0 0 30rpx;
  font-size: 28rpx;
}
._img {
  width: 55rpx;
  height: 55rpx;
  margin-right: 10rpx;
}
.hot_content {
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.hot_item {
  width: 28%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #e9e9e9;
  text-align: center;
  margin-top: 30rpx;
  border-radius: 50rpx;
  color: #a7a7a7;
}
.history_title {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx 0 30rpx;

}
._title {
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
.history_content {
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}
.history_item {
  width: 28%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #e9e9e9;
  text-align: center;
  margin-top: 30rpx;
  border-radius: 50rpx;
  color: #000;
}
/* 商品列表区域 */
.goods_content {
	width: 90%;
  margin: auto;
  margin-top: 20rpx;
	box-sizing: border-box;
	display: flex;
	flex-direction: column;
}
.goods {
	width: 100%;
	margin-bottom: 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	border-radius: 20rpx;
	overflow: hidden;
	box-shadow: 0 0 5rpx 5rpx rgb(233, 233, 233);
	/* border: 1px solid #000; */
}
.goods_img {
	width: 100%;
	height: 450rpx;
}
.goods_title {
	width: 95%;
	font-size: 26rpx;
	font-weight: bolder;
	padding-top: 10rpx;
	padding-bottom: 30rpx;
	border-bottom: 1rpx solid #000;
}
.goods_price {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 30rpx 20rpx;
	color: red;
}
.price_content {
	margin: 0 0 0 20rpx;
	display: flex;
	align-items: baseline;
}
.price_new {
	font-size: 40rpx;
	font-weight: bolder;
}
.price_old {
	font-size: 28rpx;
	color: rgb(187, 187, 187);
	text-decoration: line-through;
}
.goods_btn {
	margin: 0 20rpx 0 0;
	width: 30%;
	font-size: 24rpx !important;
	border-radius: 30rpx;
}