/* components/ScrollBox.wxss */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.blank-box{
	border: 1rpx solid #f5f5f5;
}
.scroll-box{
	display: flex;
	justify-content: space-around;
	border: 1rpx solid #f5f5f5;
}
.scroll-left{
	/* width: 23%; */
}
.scroll-right{
	/* width: 77%; */
	background-color: #F9F9F9;
}
.scroll-left-item{
	height: 100rpx;
	padding: 0 8rpx;
	box-sizing: border-box;
	line-height: 100rpx;
	font-size: 30rpx;
	background: #f8f8f8;
	color: #666;
}
.scroll-left-item.active{
	background: #ffc537;
	color: #fff;
}
.scroll-right-item{
	border-bottom: rgb(245,245,245);
}
.scroll-right{
	padding: 0 20rpx;
	box-sizing: border-box;
}
